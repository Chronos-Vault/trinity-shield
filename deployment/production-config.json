        "endpoint": "https://relayer-backup.chronosvault.org",
        "healthCheck": "/health"
      }
    ]
  },
  
  "monitoring": {
    "alerting": {
      "enabled": true,
      "channels": ["email", "webhook", "pagerduty"],
      "escalation": {
        "warning": ["email"],
        "critical": ["email", "webhook", "pagerduty"],
        "emergency": ["all"]
      }
    },
    "metrics": {
      "attestationLatency": true,
      "consensusTime": true,
      "validatorUptime": true,
      "enclaveHealth": true
    },
    "endpoints": {
      "prometheus": "/metrics",
      "health": "/health",
      "status": "/status"
    }
  },
  
  "security": {
    "attestationValidityPeriod": 86400,
    "maxQuoteAge": 600,
    "requireAllValidatorsAttested": false,
    "minimumAttestedValidators": 2,
    "emergencyContactHours": 24
